{
  "name": "mj-studio",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "nuxt dev",
    "build": "pnpm build:docs && nuxt build",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "docs:dev": "vitepress dev docs --port 4173",
    "docs:build": "vitepress build docs",
    "build:docs": "vitepress build docs",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:shared": "vitest run tests/shared.test.ts",
    "test:api": "vitest run tests/api-integration.test.ts",
    "electron:dev": "concurrently -k \"pnpm dev\" \"wait-on http://127.0.0.1:3000 && electron .\"",
    "electron:build": "pnpm nuxt build && electron-builder"
  },
  "dependencies": {
    "@iconify-json/heroicons": "^1.2.3",
    "@iconify-json/lucide": "^1.2.81",
    "@nuxt/ui": "^4.2.1",
    "@vue-flow/background": "^1.3.2",
    "@vue-flow/controls": "^1.1.3",
    "@vue-flow/core": "^1.48.1",
    "@vue-flow/minimap": "^1.5.4",
    "@vue-flow/node-resizer": "^1.5.0",
    "better-sqlite3": "^12.5.0",
    "drizzle-orm": "^0.45.1",
    "jose": "^6.1.3",
    "marked": "^17.0.1",
    "nuxt": "^4.2.2",
    "shiki": "^3.20.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@nuxt/test-utils": "^3.21.0",
    "@types/better-sqlite3": "^7.6.13",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "mermaid": "^11.12.2",
    "typescript": "^5.9.3",
    "vitepress": "^1.6.4",
    "vitepress-plugin-mermaid": "^2.0.17",
    "vitest": "^4.0.15",
    "wait-on": "^8.0.5"
  },
  "build": {
    "appId": "com.mjstudio.desktop",
    "productName": "MJ-Studio",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      ".output/**",
      "electron/**",
      "node_modules/**",
      "package.json",
      "server/database/migrations/**"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
